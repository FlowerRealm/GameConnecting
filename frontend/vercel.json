{
    "version": 2,
    "builds": [
        {
            "src": "webServer.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/js/(.*)",
            "dest": "/public/js/$1"
        },
        {
            "src": "/styles/(.*)",
            "dest": "/public/styles/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/public/images/$1"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/webServer.js"
        },
        {
            "src": "/api/(.*)",
            "dest": "/webServer.js"
        },
        {
            "src": "/login",
            "dest": "/public/pages/login.html"
        },
        {
            "src": "/register",
            "dest": "/public/pages/register.html"
        },
        {
            "src": "/admin",
            "dest": "/public/pages/admin.html"
        },
        {
            "src": "/servers",
            "dest": "/public/pages/servers.html"
        },
        {
            "src": "/friends",
            "dest": "/public/pages/friends.html"
        },
        {
            "src": "/chat",
            "dest": "/public/pages/chat.html"
        },
        {
            "src": "/profile",
            "dest": "/public/pages/profile.html"
        },
        {
            "src": "/",
            "dest": "/public/pages/index.html"
        },
        {
            "handle": "filesystem"
        }
    ],
    "build": {
        "env": {
            "NODE_ENV": "production",
            "BACKEND_URL": "https://gameconnecting.onrender.com",
            "SOCKET_URL": "wss://gameconnecting.onrender.com",
            "API_KEY": "FlowerRealmGameConnecting",
            "FRONTEND_URL": "https://game.flowerrealm.top",
            "SOCKET_RECONNECTION_ATTEMPTS": "3",
            "SOCKET_RECONNECTION_DELAY": "1000",
            "SOCKET_TIMEOUT": "5000"
        }
    }
}