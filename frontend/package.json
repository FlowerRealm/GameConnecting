{
    "name": "gameconnecting-frontend",
    "version": "1.0.0",
    "description": "Frontend for GameConnecting project",
    "type": "module",
    "scripts": {
        "start": "serve .",
        "start:dev": "serve . --listen 3001",
        "start:test": "cross-env TEST_MODE=true serve . --listen 3001",
        "test": "cross-env TEST_MODE=true NODE_OPTIONS=--experimental-vm-modules jest",
        "test:watch": "cross-env TEST_MODE=true NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "dependencies": {
        "socket.io-client": "^4.7.2"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "serve": "^14.2.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "@testing-library/jest-dom": "^6.1.5",
        "@babel/core": "^7.23.6",
        "@babel/preset-env": "^7.23.6",
        "@babel/plugin-transform-modules-commonjs": "^7.23.3",
        "babel-jest": "^29.7.0"
    }
}